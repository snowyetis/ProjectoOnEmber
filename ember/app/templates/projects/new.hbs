<form {{ action "create" on="submit" }} role="form" class="projects" >
  <fieldset><legend>Create your Project</legend>
    <div class="form-group">
      <label for="project_name">Project Name</label>
      {{ input value=projects.project_name class="form-control" }}
    </div>
    <div class="form-group">
      <label for="status">Status</label>
      {{ input value=projects.status class="form-control" }}
    </div>
    <div class="form-group">
      <label for="feature_name">Feature Name</label>
      {{ input value=project_details.feature_name class="form-control" }}
    </div>
    <div class="form-group">
      <label for="available_hours">Available Hours</label>
      {{ input value=project_details.available_hours class="form-control" }}
    </div>
    <div class="form-group">
      <label for="hours_billed">Hours Billed</label>
      {{ input value=project_details.hours_billed class="form-control" }}
    </div>
    <div class="form-group">
      <label for="amount">Amount</label>
      {{ input value=project_details.amount class="form-control" }}
    </div>
    <button type="submit">Save</button>
    <button type="button" {{action "openProjectDetailModal"}}>Add</button>
  </fieldset>
</form>

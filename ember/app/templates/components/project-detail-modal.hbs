<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button {{ action "closeProjectDetailModal" }} type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{title}}</h4>
      </div>
      <div class="modal-body">
          <h3>Add a Project Detail</h3>

        <form {{ action "create" on="submit" }} role="form" class="projects" >
          {{ input type="hidden" value=id }}

          <div class="form-group">
            <label for="feature_name">Feature Name</label>
            {{ input value=projects.feature_name class="form-control" }}
          </div>
          <div class="form-group">
            <label for="available_hours">Available Hours</label>
            {{ input value=projects.available_hours class="form-control" }}
          </div>
          <div class="form-group">
            <label for="hours_billed">Hours Billed</label>
            {{ input value=projects.hours_billed class="form-control" }}
          </div>
          <div class="form-group">
            <label for="amount">Amount</label>
            {{ input value=projects.amount class="form-control" }}
          </div>
          <div class="modal-footer">
            <button type="submit">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
